config ENTROPY_CC3XX
	bool "Arm CC3XX RNG driver for Nordic devices"
	# TODO: CRYPTOCELL_USABLE is set when BUILD_WITH_TFM=y (probably same for SPM)
	# Continue with cryptocell-usable rework in nrfxlib
	depends on CRYPTOCELL_USABLE || SPM_SERVICE_RNG || TFM_CRYPTO_RNG_MODULE_ENABLED
	depends on ENTROPY_GENERATOR
	select ENTROPY_HAS_DRIVER
	default y
	help
	  This option enables the Arm CC3xx RNG devices in nRF52840, nRF5340, and nRF9160
	  devices. This is dependent on CC3xx being enabled in nrf_security.
	  This is required for TF-M builds using NORDIC_SECURITY_BACKEND.
